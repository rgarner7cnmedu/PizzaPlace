@page "/counter"
@page "/counter/{CurrentCount:int}"

<h1>Counter</h1>
<p>
    Current count:
    <span>@CurrentCount</span>
</p>
<button class="btn btn-primary"
        @onclick="IncrementCount">
    Click me
</button>
@code {
    [Parameter]
    public int CurrentCount { get; set; } = 0;


    private void IncrementCount()
    => CurrentCount += 1;
}